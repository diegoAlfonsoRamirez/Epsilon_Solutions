<div>
    <section class="section-card">
        <% for (let observacion of observaciones) { %>
        <form id="insertObservacion" action="/mentees/editObservacion=<%= observacion.idObservacion %>" method="POST">
            <div class="form-group">
                <label for="descObservacion">Modifica tu observaci√≥n:</label>
                <textarea class="form-control" id="descObservacion" name="descObservacion" rows="3" oninput="validate(this)"><%- observacion.descObservacion -%> </textarea>
            </div>
            <button type="submit" class="btn btn-primary w-100">Guardar cambios</button>
        </form>
        <% } %>
        <br>
        <a href="/mentees/misMentorados"><button type="button" class="btn btn-secondary">Regresar a tus Mentorados</button></a>
    </section>
</div>

<script>
    function validate(input){
        if(/^\s/.test(input.value))
            input.value = '';
        }
</script>

