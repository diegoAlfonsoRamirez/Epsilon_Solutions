        <section class="section-card">

            <h1 id="principal">Periodos de Evaluación</h1>
            <h2>Agregar un nuevo periodo:</h2>
            <br>

            <form action="/periodos/nuevoPeriodo" method="POST">
                <label for="FechaInicio">Fecha de Inicio: </label>
                <input type="datetime-local" id="FechaInicio" name="FechaInicio" >
                <br><br>

                <label for="FechaFin">Fecha Fin: </label>
                <input type="datetime-local" id="FechaFin" name="FechaFin" >
                <br><br>

                <button type="submit" class="btn btn-dark" id="btnRegPeriodo" onclick="checkDate()">Registrar</button>
            </form>
